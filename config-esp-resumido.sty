% CONFIGURACIÓN DE COLORES
\definecolor{primaryColor}{RGB}{0, 32, 96} 
\hypersetup{colorlinks, breaklinks, urlcolor=primaryColor, linkcolor=primaryColor}

% ESTILO DE SECCIONES (Espaciado mucho más compacto)
\titleformat{\section}{\large\scshape\raggedright\color{primaryColor}}{}{0em}{}[\titlerule]
\titlespacing{\section}{0pt}{4pt}{3pt}

% COMANDOS PERSONALIZADOS
\newcommand{\fecha}[1]{\hfill \small \textit{\color{black!70} #1}}

% Entorno Experiencia (Reducción de topsep y itemsep)
\newenvironment{experiencia}[3]{
    \noindent {\normalsize\textbf{#1}} \\ % Reducido de large a normalsize
    \noindent {\small{\textit{#2}} \fecha{#3}}
    \small
    \begin{itemize}[nosep, leftmargin=1.2em, label=-, itemsep=0pt, topsep=0pt]
}{
    \end{itemize}
    \vspace{0.2em}
}

% Entorno Experiencia corta
\newenvironment{experiencia_corta}[4]{
    \noindent \normalsize{\textbf{#1}} \fecha{#3} \\ 
    \noindent {\small\textit{#2}} \\
    \noindent {\small #4}
}{}

% Entorno Formación
\newenvironment{formacion}[4]{
    \noindent {\normalsize\textbf{#1}} \fecha{#4} \\ % Reducido de large a normalsize
    \noindent {\small #2, #3}
    \small
    \begin{itemize}[nosep, leftmargin=1.2em, label=-, itemsep=0pt, topsep=0pt]
}{
    \end{itemize}
    \vspace{0.2em}
}

% Comandos de Skills (Ajuste de vspace negativos para compactar)
\newcommand{\tecnologias}[1]{%
    \vspace{-0.2em}
    \noindent \footnotesize \textbf{\color{primaryColor}Herramientas principales:} #1 \par
}

\newcommand{\habilidades}[1]{%
    \vspace{-0.2em}
    \noindent \footnotesize \textbf{\color{primaryColor}Habilidades destacadas:} #1 \par
}

\newcommand{\tecnologiasItems}[1]{%
    \vspace{-0.3em}
    \noindent \footnotesize \textbf{\color{primaryColor}Tecnologías y herramientas:}
    \begin{itemize}[nosep, leftmargin=2em, label=\tiny\faCode, topsep=0pt, itemsep=0pt]
        \scriptsize #1
    \end{itemize}
}

\newcommand{\curso}[4]{%
    \noindent
    \begin{tabularx}{\linewidth}{@{}X r@{}}
        \textbf{\small #1} & {\fecha{#4}} \\
        \multicolumn{2}{@{}l}{\footnotesize \textit{#2} (#3 hs).}
    \end{tabularx} \par
    \vspace{0.2em}
}