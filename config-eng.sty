% CONFIGURACIÓN DE COLORES
\definecolor{primaryColor}{RGB}{0, 32, 96} 
\hypersetup{colorlinks, breaklinks, urlcolor=primaryColor, linkcolor=primaryColor}

% ESTILO DE SECCIONES
\titleformat{\section}{\Large\scshape\raggedright\color{primaryColor}}{}{0em}{}[\titlerule]
\titlespacing{\section}{0pt}{8pt}{6pt}

% COMANDOS PERSONALIZADOS
\newcommand{\fecha}[1]{\hfill \small \textit{\color{black!70} #1}}

% Entorno Experiencia
\newenvironment{experiencia}[1]{
    \vspace{0.2em}
    \noindent {\normalsize\textbf{#1}} \par
}{
    \vspace{0.3em}
}

% Rol
\newenvironment{rol}[2]{
    \vspace{0.1ex}
    \noindent {\small\textbf{\textit{#1}} \fecha{#2}} 
    \small
    \begin{itemize}[nosep, leftmargin=1.2em, label=-, itemsep=0pt, topsep=1pt]
}{
    \end{itemize}
}

% Entorno Experiencia corta
\newenvironment{experiencia_corta}[4]{
    \noindent \normalsize{\textbf{#1}} \fecha{#3} \\ 
    \noindent {\small\textit{#2}} \\[2pt]
    \noindent {\small #4}
}{}

% Entorno Formación
\newenvironment{formacion}[4]{
    \noindent {\large\textbf{#1}} \fecha{#4} \\
    \noindent {#2}, {#3}
    \small
    \begin{itemize}[nosep, leftmargin=1.2em, label=-, itemsep=2pt, topsep=2pt]
}{
    \end{itemize}
    \vspace{0.4em}
}

% Comandos de Skills
\newcommand{\tecnologias}[1]{%
    \vspace{-0.4em}
    \noindent \footnotesize \textbf{\color{primaryColor}Core Tools:} #1 \normalsize \par
}

\newcommand{\habilidades}[1]{%
    \vspace{-0.4em}
    \noindent \footnotesize \textbf{\color{primaryColor}Key Skills:} #1 \normalsize \par
}

\newcommand{\tecnologiasItems}[1]{%
    \vspace{-0.4em}
    \noindent \footnotesize \textbf{\color{primaryColor}Technologies and Tools:}
    \begin{itemize}[nosep, leftmargin=2em, label=\tiny\faCode]
        \scriptsize #1
    \end{itemize}
}

% Eventos y Presentaciones
\newcommand{\evento}[3]{%
    \noindent \textbf{#1}. \textit{#2}. {\small \textit{\color{black!70} {#3}}}. \par
    \vspace{0.4em}
}

\newcommand{\presentacion}[4]{%
    \noindent \textbf{#1} \par
    \noindent \textit{#2}. \footnotesize #3 \fecha{#4} \par
    \vspace{0.4em}
}

\newcommand{\curso}[4]{%
    \noindent
    \begin{tabularx}{\linewidth}{@{}X r@{}}
        \textbf{#1} & {\fecha{#4}} \\
        \multicolumn{2}{@{}l}{\textit{#2} (#3 hrs).}
    \end{tabularx} \par
    \vspace{0.4em}
}