\definecolor{primaryColor}{RGB}{0, 32, 96} 
\hypersetup{colorlinks, breaklinks, urlcolor=primaryColor, linkcolor=primaryColor}

% ESTILO DE SECCIONES (Compacto)
\titleformat{\section}{\large\scshape\raggedright\color{primaryColor}}{}{0em}{}[\titlerule]
\titlespacing{\section}{0pt}{4pt}{3pt}

% COMANDOS PERSONALIZADOS
\newcommand{\fecha}[1]{\hfill \small \textit{\color{black!70} #1}}

% Experience Environment
\newenvironment{experiencia}[3]{
    \noindent {\normalsize\textbf{#1}} \\
    \noindent {\small{\textit{#2}} \fecha{#3}}
    \small
    \begin{itemize}[nosep, leftmargin=1.2em, label=-, itemsep=0pt, topsep=0pt]
}{
    \end{itemize}
    \vspace{0.2em}
}

% Short Experience Environment
\newenvironment{experiencia_corta}[4]{
    \noindent \normalsize{\textbf{#1}} \fecha{#3} \\ 
    \noindent {\small\textit{#2}} \\
    \noindent {\small #4}
}{}

% Education Environment
\newenvironment{formacion}[4]{
    \noindent {\normalsize\textbf{#1}} \fecha{#4} \\
    \noindent {\small #2, #3}
    \small
    \begin{itemize}[nosep, leftmargin=1.2em, label=-, itemsep=0pt, topsep=0pt]
}{
    \end{itemize}
    \vspace{0.2em}
}

% Skills Commands
\newcommand{\tecnologias}[1]{%
    \vspace{-0.2em}
    \noindent \footnotesize \textbf{\color{primaryColor}Core Tools:} #1 \par
}

\newcommand{\habilidades}[1]{%
    \vspace{-0.2em}
    \noindent \footnotesize \textbf{\color{primaryColor}Key Skills:} #1 \par
}

\newcommand{\tecnologiasItems}[1]{%
    \vspace{-0.3em}
    \noindent \footnotesize \textbf{\color{primaryColor}Technologies and Tools:}
    \begin{itemize}[nosep, leftmargin=2em, label=\tiny\faCode, topsep=0pt, itemsep=0pt]
        \scriptsize #1
    \end{itemize}
}

% Events and Presentations
\newcommand{\evento}[3]{%
    \noindent \textbf{#1}. \textit{#2}. {\small \textit{\color{black!70} {#3}}}. \par
    \vspace{0.2em}
}

\newcommand{\presentacion}[4]{%
    \noindent \textbf{#1} \par
    \noindent \textit{#2}. \footnotesize #3 \fecha{#4} \par
    \vspace{0.2em}
}

\newcommand{\curso}[4]{%
    \noindent
    \begin{tabularx}{\linewidth}{@{}X r@{}}
        \textbf{\small #1} & {\fecha{#4}} \\
        \multicolumn{2}{@{}l}{\footnotesize \textit{#2} (#3 hrs).}
    \end{tabularx} \par
    \vspace{0.2em}
}