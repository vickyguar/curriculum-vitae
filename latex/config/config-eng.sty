% COMANDOS PERSONALIZADOS
\newcommand{\fecha}[1]{\hfill \small \textit{\color{black!70} #1}}

% Entorno Experiencia
\newenvironment{experiencia}[1]{
    \par
    \noindent\raggedright\normalsize\textbf{#1}\\ %\setlength{\parindent}{0pt}
    \nopagebreak
}{
}

\newenvironment{rol}[2]{
    \noindent\raggedright{\small\textbf{\textit{#1}} \small\fecha{#2}}\\
    \small
    \begin{itemize}[nosep, leftmargin=2em, label=--, itemsep=0pt, parsep=0pt, topsep=0pt, partopsep=0pt]
}{
    \end{itemize}
}

\newenvironment{rol_corto}[2]{%
    \noindent\raggedright{\small\textbf{\textit{#1}} \small\fecha{#2}}\\
    \noindent\small\justifying%\setlength{\parindent}{0pt}\justifying\ignorespaces
}{
}

% Entorno Formación
\newenvironment{formacion}[4]{
    \noindent\raggedright{\normalsize\textbf{#1} \small\fecha{#4}}\\
    \noindent\raggedright{\small\textbf{\textit{#2, #3}}}
    \small
    \begin{itemize}[nosep, leftmargin=2em, label=--, itemsep=0pt, parsep=0pt, topsep=0pt, partopsep=0pt]
}{
    \end{itemize}
}

